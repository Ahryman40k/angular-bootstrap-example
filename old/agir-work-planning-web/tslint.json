{
  "extends": "@villemontreal/lint-config-villemontreal/rules/tslint-angular",
  "rulesDirectory": ["node_modules/codelyzer"],
  "rules": {
    "await-promise": true,
    "no-async-without-await": true,
    "no-attribute-decorator": true,
    "no-floating-promises": true,
    "no-host-metadata-property": false,
    "no-inputs-metadata-property": true,
    "no-outputs-metadata-property": true,
    "no-return-await": true,
    "pipe-prefix": [true, "app", "test", "vdm"],
    "prefer-readonly": true,
    "prefer-template": false,
    "radix": false,
    "return-undefined": true,
    "template-banana-in-box": true,
    "template-no-negated-async": true,
    "use-lifecycle-interface": true,
    // Bottom section are deprecated options from old version of TSLint.
    // Need to deactivate them because the current version of lint-config-villemontreal
    // have old rules, otherwise we'll have warnings.
    "banana-in-box": false,
    "no-attribute-parameter-decorator": false,
    "pipe-naming": false,
    "templates-no-negated-async": false,
    "use-host-property-decorator": false,
    "use-input-property-decorator": false,
    "use-life-cycle-interface": false,
    "use-output-property-decorator": false
  }
}
