// ==========================================
// To add those settings :
// F1 + "User Settings"
// ==========================================
{
  "editor.codeActionsOnSave": {
    "source.fixAll.tslint": true
  },
  // ==========================================
  // Automatic formatting when a file is saved.
  // ==========================================
  "editor.formatOnSave": true,
  // ==========================================
  // No search on some files...
  // ==========================================
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "src/**/*.js": true,
    "node_modules/**/*.js": true,
    "open-api/**/*.js": true,
    "tests/**/*.js": true,
    "test-data/**/*.js": true,
    "config/**/*.js": true,
    "**/*.log*": true
  },
  // ==========================================
  // Enforces usage of single quote.
  // ==========================================
  "prettier.singleQuote": true,
  // ==========================================
  // Reorganize imports when saving.
  // ==========================================
  "typescriptHero.imports.organizeOnSave": true,
  "typescriptHero.imports.multiLineTrailingComma": false,
  "sonarlint.connectedMode.project": {
    "serverId": "vdm",
    "projectKey": "GDT:AgirPanification:Web"
  }
}
