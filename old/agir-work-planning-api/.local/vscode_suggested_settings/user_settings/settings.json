// ==========================================
// To add those settings :
// F1 + "User Settings"
// ==========================================
{
  // ==========================================
  // Automatic formatting when a file is saved.
  // ==========================================
  "editor.formatOnSave": true,
  // ==========================================
  // No search on some files...
  // ==========================================
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "src/**/*.js": true,
    "node_modules/**/*.js": true,
    "open-api/**/*.js": true,
    "tests/**/*.js": true,
    "test-data/**/*.js": true,
    "config/**/*.js": true,
    "**/*.log*": true
  }
}
